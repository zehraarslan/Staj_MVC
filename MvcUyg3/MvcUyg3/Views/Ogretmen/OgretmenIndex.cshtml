@using MvcUyg3.Models.Entity;
@model List<tblogretmen>
@{
    ViewBag.Title = "OgretmenIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ÖĞRETMEN ID</th>
            <th>ÖĞRETMEN ADI</th>
            <th>ÖĞRETMEN SOYADI</th>
            <th>BRANŞI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrt in Model)
        {
        <tr>
            <th>@ogrt.ogretmenid</th>
            <td>@ogrt.ogretmenad</td>
            <td>@ogrt.ogretmensoyad</td>
            <td>@ogrt.ogretmenders</td>
            <td>@Html.ActionLink("SİL BUTONU", "OgretmenSil", new { id = ogrt.ogretmenid }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Ogretmen/OgretmenGetir/@ogrt.ogretmenid" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
    </tbody>
</table>

<a href="/Ogretmen/OgretmenEkle" class="btn btn-primary">YENİ ÖĞRETMEN EKLE</a>