@using MvcSistem1.Models.Entity;
@model List<tbSinif>
@{
    ViewBag.Title = "SinifIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>DERS ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>


    </tr>
    <tbody>
        @foreach (var snf in Model)
        {
            <tr>
                <th>@snf.id</th>
                <td>@snf.Ad</td>

                <td>@Html.ActionLink("SİL", "SinifSil", new { id = snf.id }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Sinif/SinifGetir/@snf.id" class="btn btn-success">GÜNCELLE</a></td>
            </tr>


        }
    </tbody>
</table>
<a href="/Sinif/SinifEkle" class="btn btn-primary">YENİ SINIF EKLE</a>


