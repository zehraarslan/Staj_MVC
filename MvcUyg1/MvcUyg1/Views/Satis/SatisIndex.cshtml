@model MvcUyg1.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "SatisIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1" >SATIŞ YAP</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-header">Satış Yapma Ekranı</h2>
            </div>
            <form method="post" action="/Satis/SatiEkle/">
                <div class="modal-body">
                    <label>Ürün Adı:</label>
                    @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
                    <br />
                    <label>Müşteri Adı Soyadı:</label>
                    @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
                    <br />
                    <label>Ürün Adet:</label>
                    @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
                    <br />
                    <label>Fiyat:</label>
                    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-info">Verileri Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" >Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

